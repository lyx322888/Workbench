<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bin="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="click"
            type="com.zpz.home.ui.SettingActivity.ClickProxy"/>
        <variable
            name="vm"
            type="com.zpz.home.vm.SetingModel" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
       <include layout="@layout/common_toolbar"
           android:id="@+id/common_toolbar"
           bin:vm = "@{vm}"
          />
        <LinearLayout
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="1dp"
                android:paddingHorizontal="21dp"
               style="@style/SettingItem">
            <TextView
                android:text="当前版本"
                android:textColor="@color/titleColor"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView
                    android:text="@{vm.versionName}"
                    android:textColor="@color/titleColor"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="1dp"
                android:paddingHorizontal="21dp"
               style="@style/SettingItem">
            <TextView
                android:text="反馈与建议"
                android:textColor="@color/titleColor"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <ImageView
                    style="@style/MeImgRight"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="1dp"
                android:paddingHorizontal="21dp"
                style="@style/SettingItem">
                <TextView
                    android:text="去评分"
                    android:textColor="@color/titleColor"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    style="@style/MeImgRight"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="1dp"
                android:paddingHorizontal="21dp"
                style="@style/SettingItem">
                <TextView
                    android:text="清除缓存"
                    android:textColor="@color/titleColor"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    style="@style/MeImgRight"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <TextView
                android:textSize="16sp"
                android:layout_marginTop="26dp"
                android:textColor="@color/exitFontColor"
                android:background="@color/white"
                android:text="退出登录"
                android:gravity="center"
                onAntiShakeClick="@{click.outLogin}"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="53dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>