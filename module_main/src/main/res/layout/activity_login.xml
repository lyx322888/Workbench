<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.zpz.main.vm.LoginViewModel" />
        <variable
            name="click"
            type="com.zpz.main.ui.LoginActivity.ClickProxy" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LoginActivity">
        <ImageView
            android:layout_gravity="end"
            android:src="@mipmap/bg_login"
            android:layout_width="170dp"
            android:layout_height="140dp"/>
        <LinearLayout
            android:layout_marginTop="95dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zpz.common.view.CircleImageView
                android:src="@mipmap/ic_mr_head"
                android:layout_width="72dp"
                android:layout_height="72dp"/>
            <ImageView
                android:src="@mipmap/bg_login_title"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_marginHorizontal="32dp"
                android:paddingVertical="11dp"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:background="@drawable/line_login_radius4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="用户账号"
                    android:textSize="14sp"
                    android:textColor="@color/grayEtTitleFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingTop="10dp"
                    android:id="@+id/login_account_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayEt"
                    android:inputType="textEmailAddress"
                    android:hint="请输入账号"
                    android:text="@={vm.name}"
                    android:imeOptions="actionNext"
                    android:textColorHint="#C9C9C9"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_marginHorizontal="32dp"
                android:paddingVertical="11dp"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:background="@drawable/line_login_radius4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="密码"
                    android:textSize="14sp"
                    android:textColor="@color/grayEtTitleFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingTop="10dp"
                    android:id="@+id/login_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayEt"
                    android:inputType="textPassword"
                    android:hint="请输入密码"
                    android:text="@={vm.password}"
                    android:textColorHint="#C9C9C9"
                    android:textSize="16sp" />
            </LinearLayout>
            <Button
                android:id="@+id/login_login_btn"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/login_bg_app_color"
                android:text="登录"
                onAntiShakeClick="@{click.doLogin}"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:layout_marginBottom="17dp"
            android:text="全国企业信用公示 内部系统"
            android:textColor="@color/grayTs"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</layout>